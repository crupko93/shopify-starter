{% comment %}
Global JS
---
Set liquid variables that should be accesible via js scripts.
{% endcomment %}

{%-
  liquid
  assign mobile_menu = linklists['mobile-menu']
  assign mobile_utility_menu = linklists['mobile-utility-menu']
  assign desktop_menu = linklists['main-menu']
-%}


{%- if desktop_menu and desktop_menu.links.size > 0 -%}
{%- assign link_level = 1 -%}
<script>
  window.__theme.menu = [
    {%- for link in desktop_menu.links -%}
      {%- 
        render 'helper-theme-menu-item' 
          link: link,
          link_level: link_level, 
          children: link.links 
      -%}{%- unless forloop.last -%},{%- endunless -%}
    {%- endfor -%}
  ]
</script>
{%- endif %}